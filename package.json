{
    "name": "ts",
    "version": "0.1.0",
    "description": "Node.js express apps with TypeScript",
    "author": "Nicol√°s Flores Montenegro",
    "license": "MIT",
    "scripts": {
        "start": "npm run serve",
        "build": "npm run build-ts && npm run lint",
        "serve": "node dist/src/server.js",
        "dev": "concurrently -k -p \"[{name}]\" -n \",TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run watch-node\"",
        "watch-ts": "tsc -w",
        "watch-node": "nodemon dist/src/server.js",
        "lint": "tsc --noEmit && eslint \"**/*.{js,ts}\" --quiet --fix",
        "test": "jest --verbose --unhandled-rejections=strict --testTimeout=50000",
        "test-watch": "jest --watch",
        "migrations": "sequelize db:migrate"
    },
    "dependencies": {
        "bcrypt-nodejs": "^0.0.3",
        "bcryptjs": "^2.4.3",
        "body-parser": "^1.19.0",
        "cors": "^2.8.5",
        "dotenv": "^8.2.0",
        "express": "^4.17.1",
        "http-status-codes": "^1.4.0",
        "jsonwebtoken": "^8.5.1",
        "morgan": "^1.10.0",
        "pg": "^8.2.1",
        "pg-hstore": "^2.3.3",
        "sequelize": "^5.21.12",
        "uuid": "^8.1.0"
    },
    "devDependencies": {
        "@types/bcrypt-nodejs": "^0.0.30",
        "@types/body-parser": "^1.17.1",
        "@types/concurrently": "^4.1.0",
        "@types/express": "^4.17.1",
        "@types/jest": "^24.9.1",
        "@types/jsonwebtoken": "^8.5.0",
        "@types/node": "^12.7.8",
        "@types/supertest": "^2.0.10",
        "concurrently": "^5.2.0",
        "jest": "^26.0.1",
        "nodemon": "^2.0.4",
        "prettier": "^2.0.5",
        "sequelize-cli": "^5.5.1",
        "supertest": "^4.0.2",
        "ts-jest": "^26.1.0",
        "ts-node": "^8.4.1",
        "tslint": "^6.1.2",
        "tslint-config-prettier": "^1.18.0",
        "typescript": "^3.9.5"
    }
}
