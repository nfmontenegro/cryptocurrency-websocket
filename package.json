{
    "name": "ts",
    "version": "0.1.0",
    "description": "Node.js express apps with TypeScript",
    "author": "Nicol√°s Flores Montenegro",
    "license": "MIT",
    "scripts": {
        "start": "npm run serve",
        "build": "npm run build-ts && npm run lint",
        "serve": "node dist/server.js",
        "watch": "concurrently -k -p \"[{name}]\" -n \",TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run watch-node\"",
        "watch-ts": "tsc -w",
        "watch-node": "nodemon dist/server.js",
        "lint": "tsc --noEmit && eslint \"**/*.{js,ts}\" --quiet --fix"
    },
    "dependencies": {
        "bcrypt-nodejs": "^0.0.3",
        "body-parser": "^1.19.0",
        "dotenv": "^8.2.0",
        "errorhandler": "^1.5.1",
        "express": "^4.17.1",
        "pg": "^8.2.1",
        "pg-hstore": "^2.3.3",
        "pino": "^6.3.2",
        "pino-http": "^5.2.0",
        "pino-pretty": "^4.0.0",
        "sequelize": "^5.21.12"
    },
    "devDependencies": {
        "@types/bcrypt-nodejs": "^0.0.30",
        "@types/body-parser": "^1.17.1",
        "@types/concurrently": "^4.1.0",
        "@types/express": "^4.17.1",
        "@types/jest": "^24.0.23",
        "@types/node": "^12.7.8",
        "@types/pino-http": "^5.0.1",
        "concurrently": "^5.2.0",
        "jest": "^26.0.1",
        "nodemon": "^2.0.4",
        "prettier": "^2.0.5",
        "sequelize-cli": "^5.5.1",
        "ts-node": "^8.4.1",
        "tslint": "^6.1.2",
        "tslint-config-prettier": "^1.18.0",
        "typescript": "^3.6.3"
    }
}
